<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.pc_37.estacionamiento.MainActivity">

    <TextView
        android:id="@+id/txtResul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Total a Pagar"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Valor 1a Hora"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/editHora"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Ejemplo: 40"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editFrac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="8dp"
        android:text="Costo Por Fraccion \n15 Min"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonInp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editFrac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Ejemplo: 10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <Button
        android:id="@+id/buttonInp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:background="@color/colorPrimaryDark"
        android:text="Hora Entrada"
        android:textColor="@color/Letra"
        app:layout_constraintBottom_toTopOf="@+id/buttonOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFrac" />

    <EditText
        android:id="@+id/editInpH"
        android:layout_width="84dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Hora"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        app:layout_constraintBottom_toTopOf="@+id/editOutH"
        app:layout_constraintStart_toEndOf="@+id/buttonInp"
        app:layout_constraintTop_toBottomOf="@+id/editFrac" />

    <Button
        android:id="@+id/buttonOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:layout_marginStart="28dp"
        android:background="@color/colorPrimaryDark"
        android:text="HORA SALIDA"
        android:textColor="@color/Letra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editOutH"
        android:layout_width="84dp"
        android:layout_height="51dp"
        android:layout_marginBottom="128dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="Hora"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonOut" />

    <Button
        android:id="@+id/buttonCalcula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="Calcular"
        android:textColor="@color/Letra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editOutH" />

    <EditText
        android:id="@+id/editInpM"
        android:layout_width="84dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="min"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        app:layout_constraintBottom_toTopOf="@+id/editOutM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFrac" />

    <EditText
        android:id="@+id/editOutM"
        android:layout_width="84dp"
        android:layout_height="51dp"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="min"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="22dp"
        android:layout_height="39dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text=":"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/editInpM"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editInpH" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="22dp"
        android:layout_height="38dp"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text=":"
        android:textAlignment="center"
        android:textColor="@color/Letra"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editOutM"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editOutH" />

</android.support.constraint.ConstraintLayout>
